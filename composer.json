{
  "name": "cristiancmello/lambslim",
  "description": "LambSlim Micro-framework for Serverless deployment on AWS Lambda.",
  "authors": [
    {
      "name": "Cristian Mello",
      "email": "cristianc.mello@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require": {
    "php": ">=7.2.0",
    "mnapoli/bref": "^0.2.32",
    "slim/slim": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "LambSlim\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4"
  }
}
